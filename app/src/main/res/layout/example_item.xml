<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:layout_marginBottom="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="2dp"
            android:id="@+id/eventImageView"/>

        <TextView
            android:id="@+id/testEvent1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/eventImageView"
            android:layout_toRightOf="@+id/eventImageView"
            android:text="Line 1"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/testEvent2"
            android:layout_width="54dp"
            android:layout_height="23dp"
            android:layout_below="@id/testEvent1"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="299dp"
            android:layout_marginRight="299dp"
            android:text="Line 2"
            android:textSize="15sp"></TextView>

        <ImageView
            android:id="@+id/image_delete"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="135dp"
            android:layout_marginLeft="135dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/testEvent1"
            android:layout_toRightOf="@+id/testEvent1"
            android:clickable="false"
            android:src="@drawable/ic_delete_black_24dp"
            android:visibility="invisible" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>